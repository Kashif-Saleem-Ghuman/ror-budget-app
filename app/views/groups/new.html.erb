<section>
  <div class="log-in d-flex justify-content-between align-items-center">
    <%= render partial: "shared/arrow_icon"%>
    <li class="log"> <h2 class= "headers"> ADD CATEGORY</h2></li>
    <%= button_to destroy_user_session_path, method: :delete, class:"btn" do %>   
      <%= image_tag "arrow-right-from-bracket-solid.svg", class:"icon" %>
    <% end %>
  </div>
  <div class="container">
    <%= form_with model: @group do |f| %>
      <div class="field">
        <%= f.label :name, class:"mt-2" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "name" %>
      </div>

      <div class="field">
        <%= f.label :icon , class:"mt-2" %>
        <%= f.file_field :icon, class: "form-control"%>
      </div>

      <div class="actions add-category-end">
        <%= f.submit "Add", class: "add-category btn btn-outline-light padding-add-button" %>
      </div>
    <% end %>
  </div>
</section>
